<css>

body,html{
	background: #4286f4;
	font-family: sans-serif, tahoma;
}


.header {
  width: 100%;
  height: 100px;
  display: flex;
}

.icon-bar {
  background-image: url(images); 
  box-shadow: 0 0 1rem 0 rgba(0, 0, 0, .2);   
  border-radius: 5px;
  background-color: rgba(255, 255, 255, .15);
  width: 20%;
  margin-right: 15px;
  box-sizing: border-box;
  position: relative;
  margin-left: 60px;
  -webkit-perspective: 100px;
  perspective: 100px;
}

.menu-bar {
  width: 80%;
  background: #e6e6e6;
  box-shadow: 0 0 1rem 0 rgba(0, 0, 0, .2);   
  border-radius: 5px;
  background-color: rgba(255, 255, 255, .15);
  transition: color 0.2s;
  text-align: center;
}




/*=================================================*/
.menu {
	list-style: none;
	margin: -75px 0;
	padding: 0;
	position: fixed;
	top: 8%;
	right: 40px;
}
.menu li {
	clear: both;
	display: block;
	display: inline;
	
	
}
.menu a {
	border:1px solid white;
	border-radius: 13px;
	color: rgb(0,0,0,0);
	display: block;
	float: right;
	font-size: 13px;
	height: 24px;
	width: 24px;
	line-height: 24px;
	margin-top: 15px;
	opacity: 0.6;
	text-align: center;
	text-decoration: none;
	transition: all 0.4s;


}
.menu a:hover,
.menu a.active {
	width: 100px;
	color: #777;
	background: #fff;
}
.menu a.active {
	opacity: 1;

}
